{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "import",
    "html"
  ],
  "settings": {
    "targets": ["chrome", "firefox"],
    "compiler": "babel"
  },
  "rules": {
    "semi": [2, "never"],
    "no-console": 0,
    "global-require": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": ["error", { "props": false }],
    "no-use-before-define": ["error", { "functions": false }],
    "no-unused-vars": 1
  }
}
